{
  "title": "Whisper \u2013 Service Metrics",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "15s",
  "panels": [
    {
      "type": "stat",
      "title": "Requests (rps)",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"whisper\"}[5m]))"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "5xx rate (%)",
      "targets": [
        {
          "expr": "100 * (sum(rate(http_requests_total{job=\"whisper\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=\"whisper\"}[5m])))"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 0
      }
    },
    {
      "type": "stat",
      "title": "P95 latency (ms)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{job=\"whisper\"}[5m]))) * 1000"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      }
    }
  ]
}