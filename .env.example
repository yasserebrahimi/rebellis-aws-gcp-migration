# Application Configuration
APP_NAME=Rebellis Infrastructure
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false

# Security - CRITICAL: Change these in production!
SECRET_KEY=your-super-secret-key-here-must-be-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/rebellis_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Storage Configuration
STORAGE_BACKEND=local
GCS_BUCKET=rebellis-uploads
UPLOAD_MAX_SIZE=104857600

# ML Model Configuration
WHISPER_MODEL_PATH=/models/whisper
WHISPER_MODEL_SIZE=base
WHISPER_COMPUTE_TYPE=float16
WHISPER_CACHE_ENABLED=true
WHISPER_CACHE_TTL=86400
WHISPER_BATCH_SIZE=1
WHISPER_BEAM_SIZE=5
WHISPER_TEMPERATURE=0.0
WHISPER_NUM_WORKERS=1
USE_FASTER_WHISPER=true
USE_GPU=true

MOTION_MODEL_PATH=/models/motion
TRITON_URL=localhost:8001

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Documentation
ENABLE_DOCS=true

# SSL Configuration (for production)
USE_HTTPS=false
SSL_KEY_FILE=
SSL_CERT_FILE=
SSL_KEY_PASSWORD=
SSL_VERSION=
SSL_CERT_REQS=
SSL_CA_CERTS=
SSL_CIPHERS=

# Performance Configuration
MAX_CONNECTIONS=1000
MAX_REQUESTS=10000
KEEP_ALIVE_TIMEOUT=5
WORKERS=1

# Allowed Hosts (for production)
ALLOWED_HOSTS=localhost,yourdomain.com